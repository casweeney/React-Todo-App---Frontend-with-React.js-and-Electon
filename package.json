{
  "name": "todos",
  "version": "0.1.0",
  "private": true,
  "description": "Simple Todo App by Casweeney",
  "author": "Casweeney Ojukwu",
  "main": "./public/electron.js",
  "homepage": ".",
  "build": {
    "appId": "com.swiftapp.app",
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "productName": "Swift Todos App",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  },
  "license": "MIT",
  "engines": {
    "node": "12.13.1",
    "npm": "6.13.1"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0"
  }
}
